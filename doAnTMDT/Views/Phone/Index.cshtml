        <div class="banner_top ">
            <div class="slideshow-container row" style="margin-left:0px !important">
                <div class="nav_wrapper col-sm-2 col-md-4 col-lg-4">
                    <p class="sp_list">Danh mục sản phẩm</p>
                    @using (Html.BeginForm("LoadDienThoaiTheoDanhMuc", "Phone"))
                    {
                        <input hidden="hidden" type="text" name="name" value="Điện thoại" />
                        <input class="input_cate" type="submit" value="Điện thoại" />
                    }
                    @using (Html.BeginForm("LoadDienThoaiTheoDanhMuc", "Phone"))
                    {
                        <input hidden="hidden" type="text" name="name" value="Iphone" />
