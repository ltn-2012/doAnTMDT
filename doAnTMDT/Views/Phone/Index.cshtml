                        <input class="input_cate" type="submit" value="Máy tính bảng" />
                    }
                    @using (Html.BeginForm("LoadDienThoaiTheoDanhMuc", "Phone"))
                    {
                        <input hidden="hidden" type="text" name="name" value="Phụ kiện" />
                        <input class="input_cate" type="submit" value="Phụ kiện" />
                    }
                    @using (Html.BeginForm("LoadDienThoaiTheoDanhMuc", "Phone"))
                    {
                        <input hidden="hidden" type="text" name="name" value="Linh kiện" />
                        <input class="input_cate" type="submit" value="Phụ kiện" />
                    }


                </div>
                <div class="col-sm-8 col-md-8 col-lg-8" style="padding:0px;">
                    <ul class="container" style="padding:0px;margin:0">
                        <li><img src="~/Content/Images/banner1.jpg"></li>
                        <li><img src="~/Content/Images/banner2.jpg"></li>
                        <li><img src="~/Content/Images/banner3.jpg"></li>
                        <li><img src="~/Content/Images/banner4.jpg"></li>
                        <li><img src="~/Content/Images/banner5.jpg"></li>
                    </ul>
                </div>
            </div>

            <div class="row row_phone">
                @ViewBag.nullPhone
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        @*<div class="card item_phone">
