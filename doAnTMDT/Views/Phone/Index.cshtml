                                </div>
                            </div>*@
                        <div class="phone-item">
                            <div class="product-block">
                                <div class="left-block">
                                    <a class="product_img_link" target="_blank" href="@Url.Action("Details", "Phone", new { id = item.PhoneID })" title="Phone">
                                        <img class="img-responsive" src="@Url.Content(item.Image)" border="0" alt="banner" style="height:250px;width:auto" />
                                    </a>
                                    <a target="_blank" href="@Url.Action("Details", "Phone", new { id = item.PhoneID })" class="quick-view btn-tooltip">
                                        <i class="glyphicon glyphicon-eye-open"></i>
                                    </a>
                                    @*<span class="label-new label">New</span>*@
                                </div>
                                <div class="right-block">
                                    <div class="product-meta">
                                        <h5 class="name">
                                            <a target="_blank" href="@Url.Action("Details", "Phone", new { id = item.PhoneID })" class="product-name">@Html.DisplayFor(modelItem => item.PhoneName)</a>
                                        </h5>
                                        <div class="content_price">
                                            <span class="price product-price">
                                                @Html.DisplayFor(modelItem => item.PhonePrice)&#36
                                            </span>
                                            <span class="old-price product-price">999,999&#36</span>
                                            <span class="price-percent-reduction">30%</span>
                                        </div>
                                        <div class="functional-buttons clearfix">
                                            <a target="_parent" href="/ShoppingCart/AddToCart/@item.PhoneID" class="button ajax_add_to_cart_button"><span>Add to cart</span></a>
